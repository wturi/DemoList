<Window x:Class="WinRing0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinRing0"
        mc:Ignorable="d"
        Title="模拟键盘（WinRing0）" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Width="60" Height="20" Grid.Row="0" Grid.Column="0">输入内容</TextBlock>
        <TextBox x:Name="TextBox" Width="600" Height="20" Grid.Row="0" Grid.Column="1"></TextBox>
        <Button Width="60" Height="20" Grid.Row="0" Grid.Column="2" Click="ButtonBase_OnClick">运行</Button>

        <TextBox x:Name="ShowTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,0,10,5"></TextBox>
    </Grid>
</Window>
