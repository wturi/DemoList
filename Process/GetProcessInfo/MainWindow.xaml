<Window x:Class="GetProcessInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetProcessInfo"
        mc:Ignorable="d"
        Title="获取进程信息" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="40"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Center" Margin="10,0,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="ParentProcess" IsChecked="True" GroupName="GetProcessInfoType" Grid.Column="0">父进程</RadioButton>
            <RadioButton x:Name="ChildrenProcess" IsChecked="False" GroupName="GetProcessInfoType" Grid.Column="1">子进程</RadioButton>
            <RadioButton x:Name="BrotherProcess" IsChecked="False" GroupName="GetProcessInfoType" Grid.Column="2">兄弟进程</RadioButton>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Right">进程Pid：</TextBlock>
            <TextBox x:Name="Pid" Grid.Column="1" Grid.Row="0" Margin="5,0,5,0"></TextBox>
            <Button x:Name="Run" Grid.Column="2" Grid.Row="0" Width="50" Height="20" HorizontalAlignment="Right" Click="Run_OnClick">执行</Button>
        </Grid>
        <TextBox x:Name="ShowTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,0,10,5"></TextBox>
    </Grid>
</Window>
